    <div class="container">
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-lg">
                <h1
                    style="color: #7c795d; font-family: 'Trocchi', serif; font-size: 45px; font-weight: normal; line-height: 48px; margin: 0;">
                    Call Center Porject</h1>
            </div>
            <div class="col-sm"></div>
        </div>
        <!-- <div class="row">
            <label for="total">Set number of waiting calls:</label>
            <input type="number" name="total" min="0" max="200" value="0">
        </div> -->
        <div class="row">
            <div class="col-sm"></div>
            <div class="col">
                <div class="quantity">
                    <input type="number" min="1" max="15" id="total" step="1" value="1">
                </div>
                <div class="col-sm"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm">
                <button type="button" class="btn btn-warning" id="setCalls" value="Set"
                    onclick="sendMessage(total.value);countTime()">Set Number of waiting calls</button>
            </div>
            <div class="col-sm"></div>
        </div>
        &nbsp;
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm" style="align-items: center;">
                <button type="button" id="answerCall" onclick="startConv(total.value)" class="btn btn-success">Answer
                    The Call</button>
            </div>
            <div class="col-sm"></div>

        </div>
    </div>
    </div>
    <div class="limiter">
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100 ver1 m-b-110">
                    <div class="table100-head">
                        <table>
                            <thead>
                                <tr class="row100 head">
                                    <th class="cell100 column">Start Time</th>
                                    <th class="cell100 column">Period</th>
                                    <th class="cell100 column">Name</th>
                                    <th class="cell100 column">City</th>
                                    <th class="cell100 column">Gender</th>
                                    <th class="cell100 column">Age</th>
                                    <th class="cell100 column">Total Calls</th>
                                    <th class="cell100 column">Product</th>
                                    <th class="cell100 column">Topic</th>
                                    <th class="cell100 column">End</th>
                                    <th class="cell100 column">Wait</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <div class="table100-body js-pscroll">
                        <table id="openConversations">
                            <tbody>
                                <tr class="row100 body">

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

